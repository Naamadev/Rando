<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="500">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnClick motion:targetId="@id/detailsBaseLayout" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/detailsBaseLayout"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="0dp" />
        <Constraint
            android:id="@+id/overviewTv"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            motion:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            android:layout_marginStart="24dp"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            motion:layout_constraintTop_toTopOf="@id/detailsBaseLayout"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/movieName"
            android:layout_marginTop="55dp" />
        <Constraint
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_width="250dp"
            motion:layout_constraintTop_toBottomOf="@+id/movieName"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/genresLayout"
            android:layout_marginStart="24dp" />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            motion:layout_constraintTop_toBottomOf="@+id/movieName"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:id="@+id/genresLayout"
            android:layout_marginStart="24dp" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/genresLayout"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:id="@+id/linearLayout2" />
        <Constraint
            android:id="@+id/cast_recyclerview"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginEnd="24dp"
            motion:layout_constraintTop_toBottomOf="@+id/overviewTv"
            android:layout_marginStart="24dp"
            motion:layout_constraintHorizontal_bias="1.0"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            motion:layout_constraintBottom_toTopOf="@+id/watchTrailer" />
    </ConstraintSet>
</MotionScene>