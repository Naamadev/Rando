<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Rando" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:windowFullscreen">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_rating</item>
        <item name="colorPrimaryVariant">@color/opera_mauve</item>
        <item name="colorOnPrimary">@color/lavender_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_rating</item>
        <item name="colorSecondaryVariant">@color/maya_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogSlideAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_animation</item>
        <item name="android:windowExitAnimation">@anim/slide_down_animation</item>
    </style>

    <style name="DialogScaleAnimation">
        <item name="android:windowEnterAnimation">@anim/scale_up_animation</item>
        <item name="android:windowExitAnimation">@anim/scale_down_animation</item>
    </style>
</resources>